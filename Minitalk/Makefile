################################################################################
#	Makefile variables														   #
################################################################################

CC				=	cc
CFLAGS			=	-Wall -Werror -Wextra -g
CC_OPT			=	

DEB				=	valgrind
DEB_OPT			=	--tool=memcheck --leak-check=full --show-leak-kinds=all

ARG				=	

RM				=	rm -f

################################################################################
#	Librairies																   #
################################################################################

