LIB_OPTI		=
LIB_OPTI		=
LIB_NAME		=

MYLIBS			=	-L$(LIB_LIBFT_DIR) $(LIBFT_NAME)

MYLIBS_BONUS	=	

################################################################################
#	Mandatory part															   #
################################################################################

NAME			=	Minitalk

SRC_SERVER		=	server.c

OBJ_SERVER		=	$(SRC_SERVER:.c=.o)

NAME_SERVER		=	server

SRC_CLIENT		=	client.c

OBJ_CLIENT		=	$(SRC_CLIENT:.c=.o)

NAME_CLIENT		=	client

