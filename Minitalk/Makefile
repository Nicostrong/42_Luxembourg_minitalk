################################################################################
#	Colors																	   #
################################################################################

RESET			=	'\033[0m'

# Regular

BLACK			=	'\033[0;30m'
RED				=	'\033[0;31m'
GREEN			=	'\033[0;92m'
YELLOW			=	'\033[0;93m'
BLUE			=	'\033[0;94m'
PURPLE			=	'\033[0;95m'
CYAN			=	'\033[0;96m'
WHITE			=	'\033[0;97m'

# Bold

BBLACK			=	'\033[1;30m'
BRED			=	'\033[1;31m'
BGREEN			=	'\033[1;92m'
BYELLOW			=	'\033[1;93m'
BBLUE			=	'\033[1;94m'
BPURPLE			=	'\033[1;95m'
BCYAN			=	'\033[1;96m'
BWHITE			=	'\033[1;97m'

################################################################################
#	Progress bar															   #
################################################################################

CURRENT_FILE	= 	0
NB_SRC_SERVER	=	$(words $(SRC_SERVER))
NB_SRC_CLIENT	=	$(words $(SRC_CLIENT))
NB_BONUS		=	$(words $(BONUS))
NB_TESTER		=	$(words $(SRC_TESTER))
NB_TESTER_BONUS	=	$(words $(BONUS_TESTER))
SLEEP_TIME		=	0.001

################################################################################
#	Functions
################################################################################

define compile_c_to_o
	@$(eval CURRENT_FILE=$(shell echo $$(($(CURRENT_FILE)+1))))
	@$(CC) $(CFLAGS) -c -o $@ $<
	@printf $(BLUE)"\r\033[K\033[0KCompiling files => $< ["
	@for i in $$(seq 0 $$(($(CURRENT_FILE)*100/$(NUM_FILES)))); do \
		printf $(YELLOW)"="; \
	done
	@printf $(BBLUE)"] $(CURRENT_FILE)/$(NUM_FILES)$(RESET)"
	@if [ $(CURRENT_FILE) -eq $(NUM_FILES) ]; then \
		echo ; \
	fi
	@$(eval CURRENT_FILE=$(if \
		$(filter $(CURRENT_FILE), $(NUM_FILES)), 0, $(CURRENT_FILE)))
endef

define optimise_lib
	@printf "$(BYELLOW)Optimisation of $(LIB_NAME)$(YELLOW)\n"
	@$(LIB_OPTI) $(LIB_NAME) > /dev/null 2>&1
	@for i in $$(seq 1 50); do \
		printf "\r\033[K\033[0K["; \
		for j in $$(seq 1 $$i); do \
			printf "=="; \
		done; \
		printf " %d%% ]" $$((i * 2)); \
		sleep $(SLEEP_TIME); \
	done; \
	echo $(RESET)
endef

define delete_progress
	@$(RM) $(1) > /dev/null 2>&1
	@for i in $$(seq 100 -1 0); do \
		printf "\r\033[K\033[0K"; \
		if [ $$((i % 4)) -eq 0 ]; then \
			printf "$(BRED)DELETE - ["; \
		elif [ $$((i % 4)) -eq 1 ]; then \
			printf "$(BRED)DELETE / ["; \
		elif [ $$((i % 4)) -eq 2 ]; then \
			printf "$(BRED)DELETE | ["; \
		else \
			printf "$(BRED)DELETE \\ ["; \
		fi; \
		for j in $$(seq 0 $$i); do \
			printf '='; \
		done; \
		printf " %d/100 ]$(RESET)" $$i; \
		sleep $(SLEEP_TIME); \
	done
	@printf "\r\033[K\033[0K$(GREEN)All files $(1) of $(NAME) deleted$(RESET)\n"
endef

define delete_file
	@$(RM) $(1) > /dev/null 2>&1
	@printf "\r\033[K\033[0K$(GREEN)$(1) deleted$(RESET)\n"
endef

################################################################################
#	Rules																	   #
################################################################################

.PHONY : all $(NAME) optimize bonus deb deb_bonus tester tester_bonus clean fclean re cafe nico good

all: 			$(LIB_LIBFT_DIR)/libft.a \
				$(NAME)

$(NAME):		$(NAME_SERVER) $(NAME_CLIENT)

$(NAME_SERVER):	NUM_FILES=$(NB_SRC_SERVER)
$(NAME_SERVER):	$(OBJ_SERVER)
	@$(CC) $(CFLAGS) $(OBJ_SERVER) $(MYLIBS) -o $(NAME_SERVER)

$(NAME_CLIENT):	NUM_FILES=$(NB_SRC_CLIENT)
$(NAME_CLIENT):	$(OBJ_CLIENT)
	@$(CC) $(CFLAGS) $(OBJ_CLIENT) $(MYLIBS) -o $(NAME_CLIENT)

# bonus:		NUM_FILES=$(NB_BONUS)
# bonus:		$(OBJ_BONUS)
#	@$(LIB_PROG) $(LIB_NAME) $(OBJ_BONUS) > /dev/null 2>&1

deb:		all $(OBJ)
	$(CC) $(CFLAGS) $(CC_OPT) $(OBJ) $(MYLIBS) -g -o $(NAME)
	$(DEB) $(DEB_OPT) ./$(NAME) $(ARG)
	
# deb_bonus:	tester_bonus
#	$(DEB) ./$(TESTER_BONUS)

$(LIB_LIBFT_DIR)/libft.a:
	@$(MAKE) -sC $(LIB_LIBFT_DIR) bonus

%.o : %.c
	$(call compile_c_to_o)

optimize:		$(NAME)
	$(call optimise_lib)

# tester:			NUM_FILES=$(NB_TESTER)
# tester:			$(OBJ_TESTER)
# tester:			$(NAME)
#	@$(CC) $(CFLAGS) $(CC_OPT) $(OBJ_TESTER) $(LIB_DIR) $(LIB_NAME) -o $(TESTER)

# tester_bonus:	NUM_FILES=$(NB_TESTER_BONUS)
# tester_bonus:	$(OBJ_BONUS_TESTER)
# tester_bonus:	bonus
#	@$(CC) $(CFLAGS) $(CC_OPT) $(OBJ_BONUS_TESTER) $(LIB_DIR) $(LIB_NAME) -o $(TESTER_BONUS)

clean:
	$(call delete_progress, *.o)
	@$(MAKE) -sC $(LIB_LIBFT_DIR) clean

fclean: 	clean
	$(call delete_file, $(NAME_SERVER))
	$(call delete_file, $(NAME_CLIENT))
	@$(MAKE) -sC $(LIB_LIBFT_DIR) fclean

re : 		fclean all

